
version: '3'

services:

    DC3N1:
        container_name: container_cass_cassandra-1.1.0_stressTest_N1
        image: image_cass_cassandra-1.1.0
        command: bash -c 'sleep 0 && /usr/bin/supervisord'
        networks:
            network_cassandra-1.1.0_to_cassandra-1.2.0_stressTest_dc1ring:
                ipv4_address: 252.11.1.2
        environment:
            - CASSANDRA_CONFIG=/cassandra/conf
            - CASSANDRA_CLUSTER_NAME=dev_cluster
            - CASSANDRA_SEEDS=252.11.1.2,
            - CASSANDRA_LOGGING_LEVEL=DEBUG
        expose:
            - 7000
            - 7001
            - 7199
            - 9042
            - 9160
        ulimits:
            memlock: -1
            nproc: 32768
            nofile: 100000
        
    DC3N2:
        container_name: container_cass_cassandra-1.1.0_stressTest_N2
        image: image_cass_cassandra-1.1.0
        command: bash -c 'sleep 0 && /usr/bin/supervisord'
        networks:
            network_cassandra-1.1.0_to_cassandra-1.2.0_stressTest_dc1ring:
                ipv4_address: 252.11.1.3
        environment:
            - CASSANDRA_CONFIG=/cassandra/conf
            - CASSANDRA_CLUSTER_NAME=dev_cluster
            - CASSANDRA_SEEDS=252.11.1.2,
            - CASSANDRA_LOGGING_LEVEL=DEBUG
        depends_on:
                - DC3N1
        expose:
            - 7000
            - 7001
            - 7199
            - 9042
            - 9160
        ulimits:
            memlock: -1
            nproc: 32768
            nofile: 100000
       
    DC3N3:
        container_name: container_cass_cassandra-1.2.0_stressTest_N3
        image: image_cass_cassandra-1.2.0
        command: bash -c 'sleep 0 && /usr/bin/supervisord'
        networks:
            network_cassandra-1.1.0_to_cassandra-1.2.0_stressTest_dc1ring:
                ipv4_address: 252.11.1.4
        volumes:
            - ./persistent/log:/var/log/supervisor
        environment:
            - CASSANDRA_CONFIG=/cassandra/conf
            - CASSANDRA_CLUSTER_NAME=dev_cluster
            - CASSANDRA_SEEDS=252.11.1.2,
            - CASSANDRA_LOGGING_LEVEL=DEBUG
        depends_on:
                - DC3N1
        expose:
            - 7000
            - 7001
            - 7199
            - 9042
            - 9160
        ulimits:
            memlock: -1
            nproc: 32768
            nofile: 100000

networks:
    network_cassandra-1.1.0_to_cassandra-1.2.0_stressTest_dc1ring:
        driver: bridge
        ipam:
            driver: default
            config:
                - subnet: 252.11.1.1/24
        
